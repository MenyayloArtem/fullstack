# Используем официальный образ Node.js в качестве базового образа
FROM node:14

# Устанавливаем зависимости
WORKDIR /app
COPY package*.json ./
RUN npm install

# Копируем файлы приложения в контейнер
COPY . .

# Запускаем приложение и выводим порт сервера в консоль
EXPOSE 3000
CMD [ "npm", "start" ]
